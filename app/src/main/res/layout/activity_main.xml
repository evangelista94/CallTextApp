<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cis3334.calltextapp.MainActivity"
    android:orientation="vertical">

    <TextView
        android:text="Favorite Contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="87dp">

        <TextView
            android:text="Mom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMom" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <Button
                android:text="Call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonCallMom"
                android:layout_weight="1"
                android:onClick="onClickButtonCall" />

            <Button
                android:text="Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonTextMom"
                android:layout_weight="1"
                android:onClick="onClickButtonText" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="83dp">

        <TextView
            android:text="Dad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDad" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="65dp">

            <Button
                android:text="Call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonCallDad"
                android:layout_weight="1"
                android:onClick="onClickButtonCall" />

            <Button
                android:text="Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonTextDad"
                android:layout_weight="1"
                android:onClick="onClickButtonText" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Sis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewSis" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="76dp">

            <Button
                android:text="Call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonCallSis"
                android:layout_weight="1"
                android:onClick="onClickButtonCall" />

            <Button
                android:text="Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonTextSis"
                android:layout_weight="1"
                android:onClick="onClickButtonText" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
